<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:text="@string/status"
            android:id="@+id/status_text_view"
            android:textSize="36sp"
            />
        <TextView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_below="@+id/status_text_view"
            android:background="@drawable/stroke_bg" >
        </TextView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/origin_layer"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scroll_view"

            android:orientation="vertical"
            android:background="@drawable/stroke_bg"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/origin_text_view"
                android:text="@string/origin"
                android:gravity="center"
                android:textSize="36sp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/od_1"
                android:id="@+id/origin_waiting_at_the_gate"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/od_2"
                android:id="@+id/origin_terminal_gate_closed"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/od_3"
                android:id="@+id/origin_filling_out_paperwork"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/destin_layer"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:background="@drawable/stroke_bg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/destin_text_view"
                android:text="@string/destination"
                android:gravity="center"
                android:textSize="36sp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/od_1"
                android:id="@+id/destin_waiting_at_the_gate"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/od_2"
                android:id="@+id/destin_terminal_gate_closed"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/od_3"
                android:id="@+id/destin_filling_out_paperwork"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/road_layer"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:background="@drawable/stroke_bg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/road_text_view"
                android:text="@string/road"
                android:gravity="center"
                android:textSize="36sp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/road_1"
                android:id="@+id/road_traffic"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/road_2"
                android:id="@+id/road_refueling"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/road_3"
                android:id="@+id/road_equipment_problem"/>
        </LinearLayout>
    </LinearLayout>
    
    <Button 
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:text="@string/note"
        android:textSize="24sp"
        android:id="@+id/note"
         android:layout_below="@+id/origin_layer"
         android:layout_alignLeft="@+id/origin_layer"/>
    
</LinearLayout>
